<h3 class="text-center mt-5 mb-5">Ajouter un nouvel immeuble</h3>
<div class="container center mb-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-6">
      <div class="center mb-3">
        <% if params[:company_id] != nil %>
          <%= simple_form_for [@company, @building] do |f| %>
            <%= f.input :name, label: "Saisir un nom, identifiant, référence ou numéro unique" %>
            <%= f.input :address, label: "Adresse de l'immeuble" %>
            <%= f.input :number_of_flat, label: "Nombre d'appartements détenus" %>
            <%= f.submit "Créer", class: "btn btn-yellow-mustard mb-2" %>
            <%= link_to "Annuler", root_path, class:"btn btn-danger mb-2" %>
          <% end %>
        <% else %>
          <%= simple_form_for [@building] do |f| %>
            <%= f.input :company_id, collection: @companies, label: "Selectionner une société", include_blank: "n/a - détention en nom propre", include_hidden: false %>
            <%= f.input :name, label: "Saisir un nom, identifiant, référence ou numéro unique" %>
            <%= f.input :address, label: "Adresse de l'immeuble" %>
            <%= f.input :number_of_flat, label: "Nombre d'appartements détenus" %>
            <%= f.submit "Créer", class: "btn btn-yellow-mustard mb-2" %>
            <%= link_to "Annuler", root_path, class:"btn btn-danger mb-2" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>