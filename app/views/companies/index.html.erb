<div class="container mt-5">
  <h3 class="text-center mt-5 mb-4">Liste de vos sociétés</h3>
  <%= link_to "Ajouter une société", new_company_path  %>
  <% @companies.each do |company| %>
    <% associe = company.associe.split(",").map(&:strip) %>
    <% if associe.include?(current_user.email) %>
      <div class="row">
        <div class="border p-3 col-12 col-md-6 offset-md-3 mt-4">
          <p><%= company.name %></p>
          <p> <%= company.address %></p>
          <p>Société à l'IS : <%= company.corporate_tax ? "Oui" : "Non" %></p>
          <p>Société soumis à la TVA : <%= company.vat ? "Oui" : "Non" %></p>
          <p class="mb-1">Les associés : </p>
          <% if company.associe != nil && company.associe != "" %>
            <% company.associe.split(",").each do |a| %>
              <p class="mb-1"><%= "- " + a %></p>
            <% end %>
          <% end %>
          <div class="mt-3">
            <%= link_to "Voir", company_path(company)  %>
            <%= link_to "Modifier", edit_company_path(company)  %>
            <%= link_to "Supprimer", company_path(company), method: :delete  %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>