<h3 class="text-center mt-5 mb-4">Declarer ma consommation d'eau</h3>
<div class="container center">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-6">
      <div class="center">
        <%= simple_form_for [@tenant, @water] do |f| %>
          <%= f.input :submission_date, label: "Date de la déclaration" %>
          <%= f.input :quantity, label: "Quantité" %>
          <%= f.input :photo, label: "Photo à télécharger" %>
          <%= f.submit "Créer", class: "btn mb-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>